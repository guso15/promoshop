<T3DataStructure>
    <sheets>

        <!--##########################-->
        <!-- Tab for general settings -->
        <!--##########################-->
        <sDefault>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:promoshop/Resources/Private/Language/locallang.xml:tx_promoshop_plugin_setting_general</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>

                    <settings.allowedProductCategories>
                        <TCEforms>
                            <label>LLL:EXT:promoshop/Resources/Private/Language/locallang.xml:tx_promoshop_plugin_setting_product.categorie</label>
                            <config>
                                <type>select</type>
                                <foreign_table>tx_promoshop_domain_model_productcategorie</foreign_table>
                                <minitems>1</minitems>
								<maxitems>1</maxitems>
                            </config>
                        </TCEforms>
                    </settings.allowedProductCategories>

                    <persistence.productStoragePid>
                        <TCEforms>
                            <label>LLL:EXT:promoshop/Resources/Private/Language/locallang.xml:tx_promoshop_plugin_setting_product.storagepid</label>
                            <description>Produktspeicherplatz</description>
                            <config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>pages</allowed>
								<size>3</size>
								<maxitems>22</maxitems>
								<minitems>0</minitems>
								<show_thumbs>1</show_thumbs>
							</config>
                        </TCEforms>
                    </persistence.productStoragePid>
                    
                    <settings.adminMail>
                        <TCEforms>
                            <label>LLL:EXT:promoshop/Resources/Private/Language/locallang.xml:tx_promoshop_plugin_setting_adminmail</label>
                            <config>
                                <type>input</type>
          						<size>30</size>
          						<eval>trim</eval>
                            </config>
                        </TCEforms>
                    </settings.adminMail>
                    
                    <settings.mailHeaderImage>
					  <TCEforms>
						<label>LLL:EXT:promoshop/Resources/Private/Language/locallang.xml:tx_promoshop_plugin_setting_mailimage</label>
						<config>
							<type>group</type>
							<internal_type>file</internal_type>
							<allowed>gif,jpg,png</allowed>
							<uploadfolder>uploads/tx_promoshop</uploadfolder>
							<show_thumbs>0</show_thumbs>
							<size>1</size>
  							<maxitems>1</maxitems>
						</config>
					  </TCEforms>
				  </settings.mailHeaderImage>

                </el>
            </ROOT>
        </sDefault>

    </sheets>
</T3DataStructure>
